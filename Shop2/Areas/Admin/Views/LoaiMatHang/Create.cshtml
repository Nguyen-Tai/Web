@model Shop2.Models.ViewModel.LoaiMatHangViewModel
@using Shop2.Extensions

@{
    ViewData["Title"] = "Create";
}

<br />
<h2 class="text-info">Create Product</h2>

<form method="post" enctype="multipart/form-data">
    <div class="p-4 border rounded">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="LoaiMatHang.TenMatHang"></label>
            </div>
            <div class="col-5">
                <input asp-for="LoaiMatHang.TenMatHang" class="form-control" />
            </div>
            <span asp-validation-for="LoaiMatHang.TenMatHang" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="LoaiMatHang.MoTaMatHang"></label>
            </div>
            <div class="col-5">
                <input asp-for="LoaiMatHang.MoTaMatHang" class="form-control" />
            </div>
            <span asp-validation-for="LoaiMatHang.MoTaMatHang" class="text-danger"></span>
        </div>
      
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="GianHangs"></label>
            </div>
            <div class="col-5">
                <select asp-for="@Model.LoaiMatHang.GianHangId" asp-items="Model.GianHangs.ToSelectListItem(Model.LoaiMatHang.GianHangId)" class="form-control"></select>
            </div>
        </div>
        <br />
        <div class="form-group">
            <input type="submit" class="btn btn-primary" value="Create" />
            <a asp-action="Index" class="btn btn-success">Back to List</a>
        </div>
    </div>
</form>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

