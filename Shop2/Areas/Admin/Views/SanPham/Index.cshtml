
@model IEnumerable<SanPham>
@{
    ViewData["Title"] = "Index";
}
<div class="row">
    <div class="col-6">
        <h2 class="text-info">List sản phẩm</h2>
    </div>
    <div class="col-6 text-right">
        <a asp-action="Create" class="btn btn-info"><i class="fas fa-plus"></i>&nbsp; New San Pham</a>
    </div>
</div>
<br />
<div>
    <table class="table table-striped border>
        <tr class="table-info">
            <th>
                @Html.DisplayNameFor(m => m.TenSanPham)
            </th>

            <th>
                @Html.DisplayNameFor(m => m.TacGia)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.Gia)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.NgonNgu)
            </th>
            <th></th>
            <th></th>
            <th></th>
        </tr>
            @foreach (var item in Model)
            {
    <tr>
        <td>
            @Html.DisplayFor(m => item.TenSanPham)
        </td>      
        <td>
            @Html.DisplayFor(m => item.TacGia)
        </td>
        <td>
            @String.Format("{0:C}",item.Gia)
        </td>
        <td>
            @Html.DisplayFor(m => item.NgonNgu)
        </td>
        <td>
            <partial name="_TableButtonPartial" model="item.SanPhamId" />
        </td>
    </tr>
        }
    </table>
</div>



