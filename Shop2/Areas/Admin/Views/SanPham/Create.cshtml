@model Shop2.Models.SanPham
@{
    ViewData["Title"] = "Create";
}
<br />
<br />
<br />
<h2 class="text-info">Create sản phẩm</h2>
<br />
<form method="post" enctype="multipart/form-data">
    <div class="p-4 border rounded">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="TenSanPham">Tên sản phẩm</label>
            </div>
            <div class="col-5">
                <input asp-for="TenSanPham" class="form-control" />
            </div>
            <span asp-validation-for="TenSanPham" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="MotaSP">Mô tả SP</label>
            </div>
            <div class="col-5">
                <input asp-for="MotaSP" class="form-control" />
            </div>
            <span asp-validation-for="MotaSP" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Gia">Giá SP</label>
            </div>
            <div class="col-5">
                <input asp-for="Gia" class="form-control" />
            </div>
            <span asp-validation-for="Gia" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Image">Hình ảnh</label>
            </div>
            <div class="col-5">
                <input type="file" name="files" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="TacGia">Tác giả</label>
            </div>
            <div class="col-5">
                <input asp-for="TacGia" class="form-control" />
            </div>
            <span asp-validation-for="TacGia" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="NXB">Nhà xuất bản</label>
            </div>
            <div class="col-5">
                <input asp-for="NXB" class="form-control" />
            </div>
            <span asp-validation-for="NXB" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="NgonNgu">Ngôn ngữ</label>
            </div>
            <div class="col-5">
                <input asp-for="NgonNgu" class="form-control" />
            </div>
            <span asp-validation-for="NgonNgu" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="NgayThem">Ngày thêm</label>
            </div>
            <div class="col-5">
                <input asp-for="NgayThem" class="form-control"/>
            </div>
            <span asp-validation-for="NgayThem" class="text-danger"></span>
        </div>
        <br />
        <div class="form-group">
            <input type="submit" class="btn btn-primary" value="Create" />
            <a asp-action="Index" class="btn btn-success">Back To List</a>
        </div>
    </div>
</form>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}