@model Shop2.Models.SanPham

<br />
<br />
<br />
<h2 class="text-info">Sản Phẩm Details</h2>
<div class="p-4 border rounded row">
    <div class="col-8">
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="TenSanPham">Tên sản phẩm</label>
            </div>
            <div class="col-8">
                <input asp-for="TenSanPham" class="form-control" disabled />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="MotaSP">Mô tả SP</label>
            </div>
            <div class="col-8">
                <input asp-for="MotaSP" class="form-control" disabled />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Gia">Giá</label>
            </div>
            <div class="col-8">
                <input asp-for="Gia" class="form-control" disabled />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Image">Hình ảnh</label>
            </div>
            <div class="col-8">
                <input asp-for="Image" class="form-control" disabled />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="TacGia">Tác giả</label>
            </div>
            <div class="col-8">
                <input asp-for="TacGia" class="form-control" disabled />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="NXB">Nhà xuất bản</label>
            </div>
            <div class="col-8">
                <input asp-for="NXB" class="form-control" disabled />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="NgonNgu">Ngôn ngữ</label>
            </div>
            <div class="col-8">
                <input asp-for="NgonNgu" class="form-control" disabled />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="NgayThem">Ngày thêm</label>
            </div>
            <div class="col-8">
                <input asp-for="NgayThem" class="form-control" disabled />
            </div>
        </div>
    </div>
    <div class="col-1">

    </div>
    <div class="col-3">
        <img src="@Model.Image" width="100%" style="boder-radius:5px;border:1px solid #bbb9b9;" />
    </div>

    <br />
    <div class="form-group">
        <a asp-action="Edit" asp-route-id="@Model.SanPhamId" class="btn btn-primary">Edit</a>
        <a asp-action="Index" class="btn btn-success">Back List</a>
    </div>
</div>
